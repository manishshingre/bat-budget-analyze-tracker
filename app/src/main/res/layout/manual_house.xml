<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addtran"
        android:text="ADD TRANSACTION"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="40sp"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/h_title"
        android:layout_below="@id/addtran"
        android:background="#30ffffff"
        android:hint="Title"
        android:inputType="text"
        android:autofillHints="Title"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/h_amount"
        android:layout_below="@id/h_title"
        android:background="#30ffffff"
        android:hint="Amount"
        android:autofillHints="Amount"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/h_when"
        android:layout_below="@id/h_amount"
        android:background="#30ffffff"
        android:hint="Transaction Performerd"
        android:autofillHints="Transaction_performed"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@id/h_when"
        android:text="@string/submit"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/purple_200"
        android:layout_margin="20dp"/>

</RelativeLayout>